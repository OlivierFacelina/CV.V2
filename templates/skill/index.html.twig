            <button><img src="{{ asset('images/autonomy.png') }}" class="autonomy" alt="Autonomie"><p>Autonomie</p></button>
            <button><i class="fa-solid fa-lightbulb fa"></i><p>Résolution de problèmes</p></button>
        </div>
    </div>
</section>

{{ include('footer.html.twig') }}
